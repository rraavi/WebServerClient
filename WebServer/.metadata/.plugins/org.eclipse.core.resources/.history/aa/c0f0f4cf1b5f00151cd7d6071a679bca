#include <stdio.h>
#include <string.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <netdb.h>

void error(char *msg)
{
	perror(msg);
}

int sendreq(char filename[2000], char conntype[2000], int sockfd)
{
	int n, by_rv, i, sz;
	char buffer[2000], buffer1[2000];
	//char filename[2000], conntype[2000];
	bzero(buffer,2000);
	bzero(buffer1,2000);
	printf("Sending the details to the server, they are: %s %s\n", filename, conntype);
			sprintf(buffer,"GET /%s HTTP/1.1\r\nHost: \r\nConnection: %s\r\n\r\n", filename, conntype);
			n = send(sockfd, buffer, strlen(buffer),0);
			printf("Details sent\n");
			if(n<0)
			{
				error("ERROR READING FROM THE SOCKET");
			}
			puts("At GAANDU 3");
			while((by_rv = read(sockfd, buffer1, 2000)) > 0)
			{
				printf("\nBytes received %d\n",by_rv);
				for(i=0; i< by_rv; i++)
				{
					printf("%c", buffer1[i]);
				}
			}
			puts("At GAANDU 1");
			return 0;
}
int main(int argc, char *argv[])
{
	int sockfd, pno;
	char filename[100], filename1[100], conntype[100];
	char buf[2000];
	struct sockaddr_in s_addr;
	FILE *fp;
	if (argc < 5)
	{
		fprintf(stderr,"enter %s Hostaddr Portno Filename Connection-Type\n",argv[0]);
	}
	pno = atoi(argv[2]);
	strcpy(filename,argv[3]);
	puts(filename);
	strcpy(conntype,argv[4]);
	puts(conntype);
	sockfd = socket(AF_INET, SOCK_STREAM, 0);
	if(sockfd<0)
	{
		error("ERROR WHILE OPENING SOCKET");
	}
	bzero((char *) &s_addr, sizeof(s_addr));
	s_addr.sin_family = AF_INET;
	s_addr.sin_port = htons(atoi(argv[2]));
	s_addr.sin_addr.s_addr = inet_addr(argv[1]);
	if(connect(sockfd,(struct sockaddr *)&s_addr, sizeof(s_addr))<0)
	{
		error("ERROR WHILE CONNECTING");
	}

	bzero(buf,2000);
	fp=fopen(filename,"r");

	if(strncmp(conntype,"keep-alive", strlen(conntype))==0)
	{
		while (fgets(buf, 2000, fp)!= NULL )
		{
			fputs(buf, stdout);
		}
		fclose(fp);
		X:
		printf("Enter the filename:");
		scanf("%s", filename1);
		sendreq(filename1,conntype, sockfd);
		puts("At GAANDU 2");
		goto X;
	}
	else if(strncmp(conntype,"close", strlen(conntype))==0)
	{
		sendreq(filename, conntype, sockfd);
		close(sockfd);
	}
	return 0;
}
