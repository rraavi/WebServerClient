#ifndef HEADER_H_
#define HEADER_H_

const int MAXSIZE=32767;
const int MSS=1460;
using namespace std;

struct header
{
	unsigned int seq_no;
	unsigned int ack_no;
	unsigned char ackflag;
	unsigned char finflag;
	unsigned short length;
	char data[MSS];
};

#endif /* HEADER_H_ */

